extends ../layouts/main-layout.pug

block content
  main
    .container
      .row
        .col-12.col-md-3
        .col.col-md-6
          form.product-form(action="/admin/add-audiobook", method="POST")
            .form-group
              label(for="title") Title
              input(type="text", name="title" value="").form-control#title
            .form-group
              label(for="imageUrl") Image Url
              input(type="text", name="imageUrl" value="").form-control#imageUrl
            .form-group
              label(for="title") Author
              input(type="text", name="author" value="").form-control#author
            .form-group
              label(for="price") Price
              input(type="number", step="0.01",  name="price" value="").form-control#price
            .form-group
              label(for="description") Description
              textarea.form-control(name="description", rows="3", id="description" value="")
            
            button.btn(type="submit") Add Audiobook

          
        .col-12.col-md-3

