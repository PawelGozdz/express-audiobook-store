extends ../layouts/main-layout.pug

block content
  main
    .container
      .row
        .col-12.col-md-3
        .col.col-md-6
          form.product-form(action=`/admin/${editing ? 'edit' : 'add'}-audiobook`, method="POST")
            .form-group
              label(for="title") Title
              input(type="text", name="title" value=(editing ? audiobook.title : '')).form-control#title
            .form-group
              label(for="imageUrl") Image Url
              input(type="text", name="imageUrl" value=(editing ? audiobook.imageUrl : '')).form-control#imageUrl
            .form-group
              label(for="author") Author
              input(type="text", name="author" value=(editing ? audiobook.author : '')).form-control#author
            .form-group
              label(for="category") Category
              input(type="text", name="category" value=(editing ? audiobook.category : '')).form-control#category
            .form-group
              label(for="price") Price
              input(type="number", step="0.01",  name="price" value=(editing ? audiobook.price : '')).form-control#price
            .form-group
              label(for="description") Description
              - const textArea = editing ? audiobook.description : '';
              textarea.form-control(name="description", rows="3", id="description")= textArea
              if (editing)
                input(type="hidden", value=(audiobook.id), name="audiobookId")
              - const status = editing ? 'Edit' : 'Add Audiobook';
              button.btn(type="submit")= status
            input(type='hidden', name='_csrf', value=(csrfToken))
        .col-12.col-md-3

