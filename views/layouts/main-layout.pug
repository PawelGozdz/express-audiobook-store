<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title #{pageTitle}
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", crossorigin="anonymous")
    link(rel="stylesheet", href="/css/main.css")

  body
    header.container-fluid.bg-light.text-white
      .container
        nav.navbar.navbar-expand-sm.text-sm-center
          a(href="/").navbar-brand LOGO
          ul.navbar-nav.w-100
            li.nav-item
              a(href="/", class=(path === '/' ? 'active' : '')).nav-link Store
            li.nav-item
              a(href="/audiobooks", class=(path === '/audiobooks' ? 'active' : '')).nav-link Audiobooks
            //- if (isAuthenticated)
            //-   li.nav-item
            //-     a(href="/cart", class=(path === '/cart' ? 'active' : '')).nav-link Cart
            //-   li.nav-item
            //-     a(href="/orders", class=(path === '/orders' ? 'active' : '')).nav-link Orders
            //-   li.nav-item
            //-     a(href="/admin/audiobooks", class=(path === '/admin/audiobooks' ? 'active' : '')).nav-link Admin Audiobooks
            //-   li.nav-item
            //-     a(href="/admin/add-audiobook", class=(path === '/admin/add-audiobook' ? 'active' : '')).nav-link Add Audiobooks
            ul.navbar-nav.ml-auto
              if (isAuthenticated)
                li.dropdown
                  button#dropdownMenuButton.dropdown-toggle.nav-link(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                    | Menu
                  .dropdown-menu(aria-labelledby='dropdownMenuButton').dropdown-menu-right
                    a(href="/cart", class=(path === '/cart' ? 'active' : '')).nav-link Cart
                    a(href="/orders", class=(path === '/orders' ? 'active' : '')).nav-link Orders
                    a(href="/admin/audiobooks", class=(path === '/admin/audiobooks' ? 'active' : '')).nav-link Admin Audiobooks
                    a(href="/admin/add-audiobook", class=(path === '/admin/add-audiobook' ? 'active' : '')).nav-link Add Audiobooks
                    a(href="/admin/user", class=(path === '/admin/user' ? 'active' : '')).nav-link User settings
                li.nav-item
                  form(action="/logout" method="POST")
                    input(type='hidden', name='_csrf', value=(csrfToken))
                    button.nav-link Logout
              else
                li.nav-item
                  a(href="/login", class=(path === '/login' ? 'active' : '')).nav-link Login
                li.nav-item
                  a(href="/signup", class=(path === '/signup' ? 'active' : '')).nav-link Signup

    block content

    footer.container-fluid.bg-dark.text-white.footer
      .container
        p.p-2.text-center Audiobook Online Store

    script(src="./js/script.js")
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous")
    

