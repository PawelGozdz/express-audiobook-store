extends ../layouts/main-layout.pug

block content
  main
    section.jumbotron.jumbotron-fluid
      .container
        h1.display-4 #{pageTitle}
        hr.my-2
        p.lead Login and enojoy houndreds of amazing stories

    .row
      .col.col-sm-0.col-md-3
      .col.col-md-6
        if (errorMessage)
          p= errorMessage
        form(action="/login", method="POST")
          label Email
          input(type="email",
            name="email",
            class=(validationErrors.find(e => e.param === 'email') ? 'invalid' : ''),
              value=(oldInput.email)
            ).form-control
          label Password
          input(type="password",
            name="password",
            class=(validationErrors.find(e => e.param === 'password') ? 'invalid' : ''),
              value=(oldInput.password)
            ).form-control
          input(type='hidden', name='_csrf', value=(csrfToken))
          button(type="submit").btn.btn-primary.mt-3 Submit
          p.mt-4.text-right #[a(href="/reset") Forgot Password]
      .col.col-sm-0.col-md-3
          
      

                

            